---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import TableOfContents from '../../components/TableOfContents.astro';
import { format } from 'date-fns';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content, headings } = await post.render();
---

<Layout
  title={post.data.title}
  description={post.data.description}
  image={post.data.featuredImage}
>
  <div class="max-w-6xl mx-auto">
    <div class="flex flex-col xl:flex-row xl:gap-8">
      <article class="flex-grow max-w-4xl">
        {
          post.data.featuredImage && (
            <img
              src={post.data.featuredImage}
              alt={post.data.title}
              class="w-full h-64 object-cover rounded-lg mb-8"
            />
          )
        }
        <header class="mb-8">
          <h1 class="text-4xl font-bold mb-4">{post.data.title}</h1>
          <div class="flex flex-wrap gap-4 text-sm text-base-content/70">
            <time datetime={post.data.pubDate.toISOString()}>
              Published: {format(post.data.pubDate, 'MMMM d, yyyy')}
            </time>
            {post.data.updatedDate && (
              <time datetime={post.data.updatedDate.toISOString()}>
                Updated: {format(post.data.updatedDate, 'MMMM d, yyyy')}
              </time>
            )}
          </div>
          <div class="flex flex-wrap gap-2 mt-4">
            {post.data.categories.map((category) => (
              <a
                href={`/category/${category.toLowerCase()}`}
                class="badge badge-primary"
              >
                {category}
              </a>
            ))}
            {post.data.tags.map((tag) => (
              <a href={`/tag/${tag.toLowerCase()}`} class="badge badge-secondary">
                {tag}
              </a>
            ))}
          </div>
        </header>
        <div class="prose prose-lg max-w-none">
          <Content />
        </div>
        <footer class="mt-8 pt-8 border-t border-base-300">
          <p class="text-sm text-base-content/70">
            This content is licensed under{' '}
            <a
              href="https://creativecommons.org/licenses/by-nc-sa/4.0/"
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-primary"
            >
              CC BY-NC-SA 4.0
            </a>
          </p>
        </footer>
      </article>
      <TableOfContents headings={headings} />
    </div>
  </div>
</Layout>