---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import BlogCard from "../components/BlogCard.astro";

// Fetch recent blog posts
const posts = await getCollection("blog", ({ data }) => {
    return import.meta.env.PROD ? !data.draft : true;
});

const recentPosts = posts
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
    .slice(0, 3);

const socialLinks = [
    {
        name: "GitHub",
        url: "https://github.com/yourusername",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>`,
    },
    {
        name: "LinkedIn",
        url: "https://linkedin.com/in/yourusername",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
          </svg>`,
    },
    {
        name: "Twitter",
        url: "https://twitter.com/yourusername",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>`,
    },
];
---

<Layout
    title="Your Name - Personal Website"
    description="Professional developer specializing in web development and software engineering"
>
    <div class="max-w-4xl mx-auto">
        <!-- Header Section -->
        <header class="text-center py-16 animate-fade-in">
            <img
                src="https://github.com/EveSunMaple.png"
                alt="Your Name"
                class="w-32 h-32 rounded-full mx-auto mb-6 shadow-lg hover:shadow-xl transition-shadow duration-300"
            />
            <h1
                class="text-4xl md:text-5xl font-bold mb-4 bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent"
            >
                Your Name
            </h1>
            <p class="text-xl text-base-content/80 mb-6">
                Full Stack Developer & Software Engineer
            </p>

            <!-- Social Links -->
            <div class="flex justify-center gap-4">
                {
                    socialLinks.map((link) => (
                        <a
                            href={link.url}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="text-base-content/70 hover:text-primary transition-colors duration-300 hover:scale-110 transform"
                            aria-label={link.name}
                            set:html={link.icon}
                        />
                    ))
                }
            </div>
        </header>

        <!-- About Section -->
        <section class="prose prose-lg max-w-none mb-16">
            <p>
                Hello! I'm a passionate software engineer with over 5 years of
                experience in full-stack development. I specialize in building
                scalable web applications using modern technologies like React,
                Node.js, and TypeScript.
            </p>

            <p>
                Currently, I'm focused on creating elegant solutions to complex
                problems while maintaining clean, maintainable code. I'm
                particularly interested in performance optimization, user
                experience, and building accessible web applications.
            </p>

            <p>
                When I'm not coding, you can find me contributing to open-source
                projects, writing technical blog posts, or exploring new
                technologies to expand my skill set.
            </p>
        </section>

        <!-- Recent Blog Posts -->
        <section class="mb-16">
            <h2 class="text-3xl font-bold mb-8">Recent Posts</h2>
            <div class="grid gap-8">
                {
                    recentPosts.map((post) => (
                        <BlogCard
                            title={post.data.title}
                            description={post.data.description}
                            date={post.data.pubDate}
                            categories={post.data.categories}
                            tags={post.data.tags}
                            thumbnail={post.data.featuredImage}
                            slug={post.slug}
                        />
                    ))
                }
            </div>

            <div class="text-center mt-8">
                <a href="/blog" class="btn btn-primary"> View All Posts </a>
            </div>
        </section>
    </div>
</Layout>

<style>
    .animate-fade-in {
        animation: fadeIn 1s ease-out;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
